@model HomeMyOrdersViewModel
@{
    ViewData["Title"] = "My orders";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    @if (!Model.MyOrders.Any())
    {
        <p>You have no orders made.</p>
    }
    else
    {
        <table class="table table-hover table-bordered text-center">
            <thead>
                <tr>
                    <th class="col-md-2 text-center">Restaurant name</th>
                    <th class="col-md-4 text-center">City</th>
                    <th class="col-md-2 text-center">Numbers of products</th>
                    <th class="col-md-2 text-center">Total price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.MyOrders)
                {
                    <tr>
                        <td class="col-md-2 text-center">@order.RestaurantName</td>
                        <td class="col-md-4 text-center">@order.City</td>
                        <td class="col-md-2 text-center">@order.ProductsOrdered</td>
                        <td class="col-md-2 text-center">$@order.OrderPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a asp-area="" asp-controller="Home" asp-action="Index">Back</a>
</div>