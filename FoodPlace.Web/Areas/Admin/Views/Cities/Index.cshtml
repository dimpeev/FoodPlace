@model IEnumerable<AdminCityListingServiceModel>
@{
    ViewData["Title"] = "All cities";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-7">
        <table class="table table-hover table-bordered text-cente">
            <thead>
            <tr>
                <th class="col-sm-3 text-center">City</th>
                <th class="col-sm-2 text-center">Number of restaurants</th>
                <th class="col-sm-2 text-center"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td class="text-center">@city.Name</td>
                    <td class="text-center">@city.NumberOfRestaurants</td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-controller="Cities" asp-action="Edit" asp-route-id="@city.Id" class="btn btn-warning btn-xs">Edit</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <a asp-area="Admin" asp-controller="Cities" asp-action="Add" class="btn btn-default">Add New City</a>
    </div>
</div>
