@model RestaurantsListingViewModel
@{
    ViewData["Title"] = "My restaurants";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-9">
        @if (Model.TotalRestaurants == 0)
        {
            <p>You have no restaurants added.</p>
        }
        else
        {
            <table class="table table-hover table-bordered text-center">
                <thead>
                <tr>
                    <th class="col-sm-3 text-center">Name</th>
                    <th class="col-sm-2 text-center">City</th>
                    <th class="col-sm-2 text-center">Menu</th>
                    <th class="col-sm-2 text-center"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var restaurant in Model.Restaurants)
                {
                    <tr>
                        <td class="text-center">@restaurant.Name</td>
                        <td class="text-center">@restaurant.CityName</td>
                        <td class="text-center">@restaurant.MenuName</td>
                        <td class="text-center"></td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>
