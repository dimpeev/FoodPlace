@model AddRestaurantFormModel
@{
    ViewData["Title"] = "Add restaurant";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea rows="10" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CityId"></label>
                    <select asp-for="CityId" asp-items=@Model.Cities class="form-control"></select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MenuId"></label>
                    <select asp-for="MenuId" asp-items=@Model.Menus class="form-control"></select>
                    <span asp-validation-for="MenuId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Add</button>
                    <a asp-area="Owner" asp-controller="Restaurants" asp-action="All">Back</a>
                </div>
            </form>
        </section>
    </div>
</div>