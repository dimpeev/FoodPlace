@model FoodListingViewModel
@{
    ViewData["Title"] = "My products";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-7">
        @if (Model.TotalProducts == 0)
    {
        <p>You have no products added.</p>
}
else
{
    <table class="table table-hover table-bordered text-center">
        <thead>
            <tr>
                <th class="col-sm-3 text-center">Name</th>
                <th class="col-sm-2 text-center">Price</th>
                <th class="col-sm-2 text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model.Products)
        {
            <tr>
                <td class="text-center">@food.Name</td>
                <td class="text-center">$@food.Price</td>
                <td class="text-center"><a asp-area="Owner" asp-controller="Food" asp-action="Edit" asp-route-id="@food.Id" class="btn btn-warning btn-xs">Edit</a></td>
            </tr>
    }
        </tbody>
    </table>
}
        <a asp-area="Owner" asp-controller="Food" asp-action="Add" class="btn btn-default">Add food</a>
    </div>
</div>
